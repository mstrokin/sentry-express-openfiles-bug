{
  "compilerOptions": {
    "incremental": true,
    "noImplicitAny": false,
    "target": "es2022",
    "module": "commonjs",
    "declaration": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/main.ts", "src/app.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
